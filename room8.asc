// room script file

int bushX[7];
int bushY[7];
int dogSpot;

function room_LeaveLeft()
{
  if (player == cLive) {
     cLive.ChangeRoom(7, 3589, 1800);
     cGhost.ChangeRoom(7, 3589, 1700);
  } else {
    player.ChangeRoom(7, 3589, 1800);
  }
}

function room_FirstLoad()
{
  bushX[0] = 806;
  bushY[0] = 1702;
  bushX[1] = 1022;
  bushY[1] = 2050;
  bushX[2] = 1522;
  bushY[2] = 1910;
  bushX[3] = 2170;
  bushY[3] = 1794;
  bushX[4] = 2654;
  bushY[4] = 2042;
  bushX[5] = 2854;
  bushY[5] = 1822;
  bushX[6] = 3398;
  bushY[6] = 1734;
  
  dogSpot = Random(6);
}


function room_Load()
{
  if (dogGame == 2){
    cDog.ChangeRoom(8, bushX[dogSpot], bushY[dogSpot]);
    dogGame = 3;
  }
}

function findDog(int check) {
  player.Walk(bushX[check] -200, bushY[check], eBlock);
  if (dogGame == 3 && player == cLive && dogSpot == check){
    player.Say("Russel?");
    cDog.FollowCharacter(cLive, 300,  10);
    player.Say("There you are.");
    dogGame = 4;
  } else if (dogGame == 3 && player == cGhost && dogSpot == check){
    cGhost.Say("Found him!");
  } else if (dogGame == 3 && player == cGhost){
    cGhost.Say("Not here.");
  } else if (dogGame == 3 && player == cLive) {
    int rush;
    player.Say("Russel?");
    rush = Random(3);
    if (rush == 0) {
      cSquirrel.ChangeRoom(8, bushX[check], bushY[check]);
      cSquirrel.Walk(3836, 1680,  eBlock);
      cSquirrel.ChangeRoom(5);
      dogSpot = Random(6);
      cDog.ChangeRoom(8, bushX[dogSpot], bushY[dogSpot]);
      player.Say("Well then.");
    } else {
      player.Say("Not here then.");
    }
  }
}

function oBush0_Interact(Object *theObject, CursorMode mode)
{
  findDog(0);
}

