}

function hBathroomDoor_Interact(Hotspot *theHotspot, CursorMode mode)
{
  cLive.Walk(3328, 1700, eBlock, eWalkableAreas);
  cLive.ChangeRoom(2, 236, 2008, eDirectionLeft);
  
}

function room_FirstLoad()
{
