function room_LeaveLeft()
{
  if (player == cLive) {
    cLive.ChangeRoom(3, 3320, 1750);
    cGhost.ChangeRoom(3, 3420, 1750);
  } else {
    player.ChangeRoom(3, 3320, 1750);
  }
}

